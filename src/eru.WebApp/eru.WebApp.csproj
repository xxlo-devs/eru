    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\Views\Upload\Upload.en.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Upload.en.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Views\Upload\Upload.pl.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Upload.pl.Designer.cs</LastGenOutput>
