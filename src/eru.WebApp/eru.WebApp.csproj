        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>Upload.en.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\Views\Upload\Upload.en.Designer.cs">
        <DependentUpon>Upload.en.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Views\Upload\Upload.pl.Designer.cs">
        <DependentUpon>Upload.pl.resx</DependentUpon>
      </Compile>
      <Compile Update="Areas\UploadSubstitutions\Resources\Views\Upload\Upload.pl.Designer.cs">
