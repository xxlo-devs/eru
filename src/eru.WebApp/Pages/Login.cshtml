@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using Microsoft.AspNetCore.Mvc.Localization
@model eru.WebApp.Pages.Login
@inject IViewLocalizer Localizer

@{
    ViewData["title"] = Localizer["title"];
    Layout = "Layouts/FormLayout";
}

@section AddToScripts
{
    <script src="dist/js/login.min.js"></script>
}

<form method="post">
    <div class="notification is-danger">
        <button class="delete"></button>
        <div asp-validation-summary="All"></div>
    </div>
    <div class="field">
        <label class="label">@Localizer["username"]</label>
        <div class="control">
            <input type="text" class="input" asp-for="Model.Username"/>
        </div>
    </div>
    <div class="field">
        <label class="label">@Localizer["password"]</label>
        <div class="control">
            <input type="password" class="input" asp-for="Model.Password"/>
        </div>
    </div>
    <div class="field is-grouped">
        <div class="control">
            <input type="submit" class="button is-link" value="@Localizer["submit"]">
        </div>
        <div class="control">
            <button type="button" onclick="cancel()" class="button is-light">@Localizer["cancel"]</button>
        </div>
    </div>
</form>